{
  "name": "talent-board-be",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --require tsconfig-paths/register ./src/index.ts",
    "start": "NODE_ENV=production node build/src/index.js",
    "build": "rimraf build && tsc -p tsconfig.json && tsc-alias",
    "prepare": "husky",
    "commitlint": "commitlint --config commitlint.config.ts",
    "db:dev:up": "docker compose up -d --remove-orphans postgres redis adminer",
    "db:dev:rm": "docker compose rm -s -f -v postgres redis adminer",
    "db:dev:rebuild": "docker compose down -v && docker compose up -d --build postgres redis adminer",
    "backend:dev:up": "yarn db:dev:up && docker compose up --remove-orphans backend",
    "backend:dev:logs": "docker compose logs -f backend",
    "backend:dev:restart": "docker compose restart backend",
    "create-migration": "ts-node src/utils/createMigration.ts",
    "migration:create": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:create src/migrations/migration",
    "migration:generate": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:generate -d ./src/datasource.ts src/migrations/migration",
    "migration:run": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:run -d ./src/datasource.ts",
    "migration:revert": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:revert -d ./src/datasource.ts",
    "reset-db": "NODE_ENV=development ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm schema:drop -d ./src/datasource.ts && yarn migration:run",
    "seed:dev": "NODE_ENV=development ts-node -r tsconfig-paths/register ./src/seeders/testSeeder.ts",
    "typeorm:schema:drop": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm schema:drop -d ./src/datasource.ts",
    "typeorm:schema:reset": "yarn typeorm:schema:drop && yarn migration:run",
    "docker:reset-db": "docker compose exec backend yarn typeorm:schema:reset",
    "docker:reset-and-seed": "yarn docker:reset-db && yarn docker:seed",
    "docker:seed": "docker compose exec backend yarn seed:dev",
    "seed:prod": "NODE_ENV=production ts-node -r tsconfig-paths/register src/seeders/testSeeder.ts",
    "db:test:up": "docker compose --profile test up -d --remove-orphans postgres_test redis",
    "db:test:rm": "docker compose --profile test rm -s -f -v postgres_test redis",
    "db:test:reset": "docker compose --profile test down -v && docker compose --profile test up -d postgres_test redis",
    "test:docker": "NODE_ENV=test yarn db:test:up && yarn test",
    "test:docker:watch": "yarn db:test:up && NODE_ENV=test yarn jest --watch",
    "test": "NODE_ENV=test jest --runInBand",
    "test:watch": "NODE_ENV=test jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enyata-community/talent-board-be.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/enyata-community/talent-board-be/issues"
  },
  "homepage": "https://github.com/enyata-community/talent-board-be#readme",
  "description": "A talent board application where recruiters hire top talents",
  "dependencies": {
    "argon2": "^0.41.1",
    "axios": "^1.9.0",
    "bullmq": "^5.47.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.8.0",
    "config": "^3.3.12",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "express": "4.21.2",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "html-to-text": "^9.0.5",
    "ioredis": "^5.6.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "nodemailer": "^6.10.0",
    "passport": "^0.7.0",
    "passport-custom": "^1.1.1",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.14.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "pug": "^3.0.3",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.22",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/types": "^19.8.0",
    "@types/compression": "^1.7.5",
    "@types/config": "^3.3.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.14.0",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/pug": "^2.0.10",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.15",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "prettier --write"
    ]
  }
}
