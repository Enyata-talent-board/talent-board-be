{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node", "express"],
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["src/__tests__/*"]
    }
  },
  "include": ["src/**/*", "config", "testUtils"],
  "exclude": [
    "node_modules",
    "test",
    "build",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**"
  ]
}
